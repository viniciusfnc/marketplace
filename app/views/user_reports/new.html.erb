<%= link_to("<< Voltar", root_path, :class => 'back-link') %>

<div>
  <div class="form-group row">
    <div class="col-12">
      <span style="font-size: 30px;"><%= @user_report.report.name %></span>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-12">
      <h5><%= @user_report.report.description %></h5>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-12">
      <%= link_to("<i class='fa fa-download'> Baixar arquivo de exemplo</i>".html_safe,
                  rails_blob_path(@user_report.report.sample_file, disposition: 'attachment'),
                  title: 'Baixar Arquivo de Exemplo') if @user_report.report.sample_file.attached? %>
    </div>
  </div>


  <%= form_for(@user_report) do |f| %>
    <%= f.hidden_field(:report_id, :value => @user_report.report.id) %>
    <div class="form-group row">
      <div class="col-2">
        <label>Data Inicial</label>
        <%= f.date_field :dt_init, required: true %>
      </div>

      <div class="col-2">
        <label>Data Final</label>
        <%= f.date_field :dt_final, required: true %>
      </div>

      <div class="col-2">
        <label>Forma de Pagamento</label>
        <%= f.select(:payment_method, options_for_enum(@user_report, :payment_method),
            {prompt: "Selecione..."}, class: 'selectUserReport', required: true) %>
      </div>

      <div class="col-1">
        <label>Notificação</label>
        <%= f.select(:notification_method, options_for_enum(@user_report, :notification_method),
            {prompt: "Selecione..."}, class: 'selectUserReport', required: true) %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-2" style="margin-top: 25px;">
        <%= f.submit 'Comprar', class: 'btn btn-success' %>
      </div>
    </div>

  <% end %>
</div>
